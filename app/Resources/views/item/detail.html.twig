{% extends 'base.html.twig' %}

{% block body %}
<div id="modal" class="modal  hide fade" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="modal-label">Modal title</h4>
            </div>
            <div class="modal-body">
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>

    {{ result['article_html'] | raw }}
{% endblock %}

{% block sidebar %}

    {% if definitionIndex | length > 1 %}
        <article class="index">
            <h1>Bedeutungsindex</h1>
            <ol class="index-list">
                {% for definition in definitionIndex %}
                    <li class="index-list-item"><span class="label label-default label-pill">{{ loop.index }}.</span>
                        <a href="#sense{{ loop.index }}">{{ definition.definition_fulltext | truncate(40, true, "â€¹") }}</a>
                    </li>
                {% endfor %}
            </ol>
        </article>
    {% endif %}

    {% if searchTerm %}
        <article class="results">
            <h1>{% trans with {'%search_term%': searchTerm} %}results for{% endtrans %}</h1>

            <ol class="result-list">
                {% for document in documents %}
                    <li><a class="result-link{% if document.internal_id == result.internal_id %} active{% endif %}"
                           href="{{ path('_lemma', {'id': document.internal_id}) }}?q={{ searchTerm }}&page={{ currentPage }}">{{ document.lemma_normalized }}</a>
                    </li>
                {% endfor %}
            </ol>
        </article>
        {{ knp_pagination_render(documents) }}

    {% endif %}
{% endblock %}
